<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp"
    android:background="@color/purple_200"
    tools:context=".MultiplicationTables">

    <!-- Add a title for the screen -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Multiplication Table"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp" />

    <!-- Input field for the table number -->
    <EditText
        android:id="@+id/inputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="none"
        android:hint="Enter Table Number"
        android:background="@color/grey"
        android:inputType="number"
        android:padding="12dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:cursorVisible="true"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- Button to submit the input -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Table"
        android:padding="12dp"
        android:textColor="@color/black"
        android:background="@color/orange"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <!-- Output field for the multiplication table -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:padding="12dp">

                <TextView
                    android:id="@+id/outputText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="50sp"/>

        </ScrollView>

</LinearLayout>
